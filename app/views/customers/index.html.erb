<h1>Listing customers</h1>

<%= link_to 'New Customer', new_customer_path %>
<br />

<p><%= will_paginate @customers %></p>
<table>
  <tr>
    <th>Customer code</th>
    <th>Name</th>
    <th>Address1</th>
    <th>City</th>
    <th>State</th>
    <th>Zip code</th>
    <th>Phone</th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    	<td><dt><%= customer.customer_code %></dt></td>
    	<td><dt><%= customer.name %></dt></td>
      	<td><dt><%= customer.address1 %></dt></td>
    	<td><dt><%= customer.city %></dt></td>
    	<td><dt><%= customer.state %></dt></td>
    	<td><dt><%= customer.zip_code %></dt></td>
    	<td><dt><%= customer.phone %></dt></td>

    	<td>
    		<%= link_to 'Show', customer %>
    		<%= link_to 'Edit', edit_customer_path(customer) %>
    		<%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %>
    	</td>
	</tr>
<% end %>

</table>

<br />

<p><%= will_paginate @customers %></p>
